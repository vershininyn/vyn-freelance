<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
	<changeSet id="2021-04-18-create-accounts.1" author="Alexandr Nalivayko" labels="release">
		<createTable tableName="accounts" schemaName="some_database">
			<column name="id" type="integer" autoIncrement="true">
				<constraints primaryKey="true" nullable="false"/>
			</column>
			<column name="email" type="varchar(64)">
				<constraints nullable="false" unique="true"/>
			</column>
			<column name="registration_datetime" type="timestamp" defaultValueComputed="now()"/>
			<column name="last_auth_datetime" type="timestamp"/>
		</createTable>
	</changeSet>
</databaseChangeLog>