<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
	<changeSet id="2021-05-09-create-some_table.1" author="Alexandr Nalivayko" labels="release">
		<createTable tableName="some_table" schemaName="some_database">
			<column name="id" type="integer" autoIncrement="true">
				<constraints primaryKey="true" nullable="false"/>
			</column>
			<column name="first_name" type="varchar(64)">
				<constraints nullable="false" unique="true"/>
			</column>
			<column name="last_name" type="varchar(64)">
				<constraints nullable="false" unique="true"/>
			</column>
			<column name="account_id" type="integer">
				<constraints nullable="false"/>
			</column>
			<column name="creation_datetime" type="timestamp" defaultValueComputed="now()"/>
			<column name="last_auth_datetime" type="timestamp"/>
		</createTable>
	</changeSet>

	<changeSet id="2021-05-09-create-some_table.2" author="Alexandr Nalivayko" labels="release">
		<addForeignKeyConstraint baseColumnNames="account_id"
		                         baseTableName="some_table"
		                         baseTableSchemaName="some_database"
		                         constraintName="fk_some_table_account_id"
		                         referencedColumnNames="id"
		                         referencedTableName="accounts"
		                         referencedTableSchemaName="some_database"/>
	</changeSet>
</databaseChangeLog>